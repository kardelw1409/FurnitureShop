@model Shop_project.Models.IndexViewModel
@{
    ViewBag.Title = "Управление";
}
<h2>@ViewBag.Title.</h2>

<p class="text-success">@ViewBag.StatusMessage</p>
<div>
    <h4>Изменение параметров учетной записи</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>Пароль</dt>
        <dd>
            [
            @if (Model.HasPassword)
            {
                @Html.ActionLink("Смена пароля", "ChangePassword")
            }
            else
            {
                @Html.ActionLink("Создать", "SetPassword")
            }
            ]
        </dd>

     
      @if (User.IsInRole("admin"))
      {
            <dt> Измененить категории </dt>
            <dd>
            [@Html.ActionLink("Изменить", "index", "Categories")]
            </dd>
            <dt> Изменить товары </dt>
            <dd>
            [@Html.ActionLink("Изменить", "index", "Furnitures")]
            </dd>
        }
       
        
    </dl>
</div>

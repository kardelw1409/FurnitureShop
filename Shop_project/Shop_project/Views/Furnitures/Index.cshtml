@model Shop_project.ViewModels.FurnituresViewModel


<h2>@Model.Title</h2>

<p>
    <a asp-action="Create" class="btn btn-default">Create New</a>
</p>


@foreach (var furniture in Model.Furnitures)
{
    <div class="col-sm-4 col-lg-4 col-md-4">
        <div class="thumbnail">
            <a asp-controller="Snowboards" asp-action="Details" asp-route-id="@furniture.FurnitureId">
                <img src="@furniture.ImageUrl" alt="" height="300" width="200">
            </a>
            <div class="caption">
                <h3 class="pull-right">@furniture.Price.ToString("с")</h3>
                <h3>
                    @furniture.Title
                </h3>
            </div>
        </div>
    </div>
}

